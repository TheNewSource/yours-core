doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href='/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href=contents.css['main.css'].url)
      link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css")
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          div.logo
            img(src='/img/datt_logo.svg')
            h1
              a(href='/')= locals.name
            p.description= locals.description
    div#content
      div.content-wrap
        block content
          h2 Welcome to zombocom!
    footer
      div.content-wrap
        block footer
          section.about
            !=contents['about.md'].html
          section.copy
            p
              a.button(href='https://twitter.com/dattnetwork' target='_blank') 
                i.fa.fa-twitter
                |  twitter
              a.button(href='https://github.com/dattnetwork' target='_blank') 
                i.fa.fa-github
                |  github
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design
